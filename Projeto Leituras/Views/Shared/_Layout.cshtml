<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Leituras</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrapcosmo.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    
    <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
 
                <a class="navbar-brand" asp-action="Index" asp-controller="Home">Home</a>
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-action="Index" asp-controller="Livro">Leituras</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-action="Cadastrar" asp-controller="Livro">Novo Livro</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
   <main role="main" class="pb-3">
                    @RenderBody() 
        </main>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
